<h1>Crafty Barnardo Records</h1>


<h2>Update Record Details</h2>

<form action="/albums/<%= @albums.id%>" method="POST">
<ul>
<li>
<label for="title-field">Title:</label>
<input id="title-field" name="title" type="text" value="<%= @albums.title %>">
</li>
<li>
<label for="artist-field">Artist:</label>
<select id="artist-select" name="artist_id">
  <option value="1"<%= "selected" if @albums.artist_id == "1" %>
>Dead Kennedys</option>
  <option value="2" <%= "selected" if @albums.artist_id == "2" %>
>System Of A Down</option>
  <option value="3" <%= "selected" if @albums.artist_id == "3" %>
>Wu-Tang Clan</option>
</select>
</li>
<li>
<label for="genre-field">Genre</label>
<input type="text" id="genre-field" name="genre" value="<%= @albums.genre %>">
</li>
<li>
<label for="buy_price-field">Buy Price:</label>
<input id="buy_price-field" type="number" name="buy_price" value="<%= @albums.buy_price %>">
</li>
<li>
<label for="sell_price-field">Sell Price:</label>
<input id="sell_price-field" type="number" name="sell_price" value="<%= @albums.sell_price %>">
</li>
<li>
<label for="quantity-field">Quantity:</label>
<input id="quantity-field" type="number" name="quantity" value="<%= @albums.quantity %>">
</li>
<li>
<input class="button" type="submit" value="Update">
</li>
</ul>
</form>